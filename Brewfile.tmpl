cask_args appdir: "~/Applications"


# Utilities for macOS
brew 'mas'               # Mac App Store command line interface
brew 'dockutil'          # Tool for managing macOS dock items


# Install these on home machines only
{{- if eq .location "home" }}
cask 'alfred'
cask 'iterm2'
{{- end }}

# Install these on work machines only
{{- if eq .location "work" }}
cask 'alfred'
cask 'harvest'
cask 'iterm2'
{{- end }}


